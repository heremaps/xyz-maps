{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["es5", "ES2017", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "types" : ["mocha", "chai"],
    "baseUrl": ".",
    "paths": {
      "*": ["src/utils/*"]
    },
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "specs/**/*", "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
